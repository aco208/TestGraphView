<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.adokic.testgraphview.Main2Activity"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SELECT GROUP OF ASSESSORS"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Self-assesment"
        android:id="@+id/checkBoxSelfasses"
        android:breakStrategy="high_quality"
        android:checked="false"
        android:shadowColor="#101ee8"
        android:singleLine="false"
        android:textSize="20dp"
        android:typeface="normal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:textColorHighlight="@color/accent_material_light"
        android:lines="@android:integer/config_longAnimTime"
        android:background="#ccc9c9" />

    <View
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="#c0c0c0"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/view" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Peer-assesment"
        android:id="@+id/checkBox2"
        android:breakStrategy="high_quality"
        android:checked="false"
        android:shadowColor="#101ee8"
        android:singleLine="false"
        android:textSize="20dp"
        android:typeface="normal"
        android:textColorHighlight="@color/accent_material_light"
        android:lines="@android:integer/config_longAnimTime"
        android:background="#ccc9c9"
        android:layout_below="@+id/checkBoxSelfasses"
        android:layout_alignStart="@+id/checkBoxSelfasses"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Manager assesment"
        android:id="@+id/checkBoxManagerasses"
        android:breakStrategy="high_quality"
        android:checked="false"
        android:shadowColor="#101ee8"
        android:singleLine="false"
        android:textSize="20dp"
        android:typeface="normal"
        android:textColorHighlight="@color/accent_material_light"
        android:lines="@android:integer/config_longAnimTime"
        android:background="#ccc9c9"
        android:layout_below="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="HRD assesment"
        android:id="@+id/checkBoxHRDasses"
        android:breakStrategy="high_quality"
        android:checked="false"
        android:shadowColor="#101ee8"
        android:singleLine="false"
        android:textSize="20dp"
        android:typeface="normal"
        android:textColorHighlight="@color/accent_material_light"
        android:lines="@android:integer/config_longAnimTime"
        android:background="#ccc9c9"
        android:layout_below="@+id/checkBoxManagerasses"
        android:layout_alignStart="@+id/checkBoxManagerasses"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="External assesment (guest)"
        android:id="@+id/checkBoxExternalasses"
        android:breakStrategy="high_quality"
        android:checked="false"
        android:shadowColor="#101ee8"
        android:singleLine="false"
        android:textSize="20dp"
        android:typeface="normal"
        android:textColorHighlight="@color/accent_material_light"
        android:lines="@android:integer/config_longAnimTime"
        android:background="#ccc9c9"
        android:layout_below="@+id/checkBoxHRDasses"
        android:layout_alignStart="@+id/checkBoxHRDasses"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:id="@+id/view1"
        android:layout_below="@+id/checkBoxExternalasses"
        android:layout_alignStart="@+id/checkBoxExternalasses"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button"
        android:layout_below="@+id/view1"
        android:layout_alignStart="@+id/view1"
        android:layout_marginTop="15dp"
        android:background="#2A9FD8"
        android:textColor="#fff" />
</RelativeLayout>
